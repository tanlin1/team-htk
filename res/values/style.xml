<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="buttonAndImage" >
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_gravity">bottom|center</item>
		<item name="android:layout_weight">3</item>
	</style>

	<style name="bottom_tabs_image" >
		<item name="android:layout_width">27dp</item>
		<item name="android:layout_height">27dp</item>
		<!--<item name="android:paddingTop">5dip</item>-->
	</style>

	<style name="bottom_tabs_text" >
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@android:color/darker_gray</item>
		<item name="android:gravity">top|center</item>
	</style>
	<style name="animal" >
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:gravity">top</item>
		<item name="android:layout_gravity">top|center</item>
		<item name="android:layout_weight">1</item>
		<item name="android:clipChildren">false</item>
		<item name="android:clipToPadding">false</item>
	</style>

</resources>