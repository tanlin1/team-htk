<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="buttonAndImage" >
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:gravity">center|</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:layout_weight">1</item>
	</style>

	<style name="bottom_tabs_image" >
		<item name="android:layout_width">40dp</item>
		<item name="android:layout_height">40dp</item>
	</style>

	<style name="bottom_tabs_text" >
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@android:color/darker_gray</item>
		<item name="android:gravity">top|center</item>
	</style>
	<style name="list_content_margin">
		<item name="android:background">#ecf0f1</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:paddingLeft">16dp</item>
	</style>
	<style name="user_picture_like_info">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#646464</item>
		<item name="android:textSize">16sp</item>
	</style>
	<style name="user_picture_describe_info">
		<item name="android:background">#ecf0f1</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#000000</item>
	</style>
	<style name="user_index_head_photo_info">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@android:color/background_dark</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:layout_marginLeft">16dp</item>
	</style>

</resources>