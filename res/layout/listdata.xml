<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/apk/res/com.htk.moment.ui"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
	<utils.view.circle.CircleImageView android:layout_width="150dp"
	                                   android:layout_height="150dp"
	                                   android:src="@drawable/header_graphic"
	                                   tool:border_width="2dp"
	                                   tool:border_color="@android:color/darker_gray"
	                                   android:id="@+id/head_image"
	                                   android:layout_alignParentLeft="true"
	                                   android:layout_marginLeft="16dp"
	                                   android:layout_marginTop="20dp"
			/>
	<TextView android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:text="康乐"
	          android:textSize="30sp"
			  android:layout_toRightOf="@id/head_image"
	          android:layout_marginLeft="6dp"
	          android:layout_alignBottom="@id/head_image"
			/>
</RelativeLayout>