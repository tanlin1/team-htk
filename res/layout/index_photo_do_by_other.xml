<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="30dp"
              android:background="#f5f5f5"
		>
	<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			>
		<ImageView
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@drawable/like"
				android:id="@+id/index_photo_like_image"
				android:layout_alignParentLeft="true"
				android:layout_marginLeft="16dp"
				/>
		<ImageView
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@drawable/response"
				android:id="@+id/index_photo_comment_image"
				android:layout_toRightOf="@id/index_photo_like_image"
				android:layout_marginLeft="22dp"
				/>

		<ImageView
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@drawable/share"
				android:id="@+id/index_photo_share_image"
				android:layout_toRightOf="@id/index_photo_comment_image"
				android:layout_marginLeft="22dp"
				/>

		<ImageView
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@drawable/do_more"
				android:layout_alignParentRight="true"
		        android:layout_marginRight="6dp"
				/>
	</RelativeLayout>

</LinearLayout>