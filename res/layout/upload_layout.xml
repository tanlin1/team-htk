<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#2980b9"
		>

	<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			>

		<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="45dp"
				android:orientation="horizontal"
				android:background="#333333"

				>

			<ImageButton
					android:layout_width="30dp"
					android:layout_height="25dp"
					android:id="@+id/back_to_camera"
					android:src="@drawable/left_white"
					android:layout_alignParentLeft="true"
					android:layout_marginLeft="6dp"
					android:layout_centerVertical="true"
			        android:background="#333333"
					/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:text="Share"
					android:textSize="25sp"
					android:textStyle="bold"
					android:textScaleX="1.2"
					android:textColor="@android:color/white"
					/>

			<LinearLayout
					android:layout_width="60dp"
					android:layout_height="46dp"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:gravity="center"
					android:background="#2980b9"

					>

				<ImageButton
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:id="@+id/goto_upload_button_img"
						android:src="@drawable/every_done"
						android:background="#2980b9"

						/>
			</LinearLayout>
		</RelativeLayout>

		<HorizontalScrollView
				android:layout_width="fill_parent"
				android:layout_height="110dp"
				android:scrollbars="none"
				android:layout_marginTop="8dp"
				android:layout_marginLeft="6dp"
				android:layout_marginRight="6dp"
				android:layout_gravity="center_vertical"
				android:background="@drawable/horizon_scroll"
				>

			<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					android:id="@+id/liner"
					android:background="@android:color/white"
					>
			</LinearLayout>
		</HorizontalScrollView>

		<FrameLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:layout_marginTop="8dp"
				>

			<EditText
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="top"
					android:textCursorDrawable="@null"
					android:hint="@string/dynamic"
					android:minHeight="140sp"
					android:maxLines="5"
					android:id="@+id/describe_of_user_picture_edit_text"
					android:textColor="@color/dark"
					android:textSize="18sp"
					android:layout_marginLeft="6dp"
					android:layout_marginRight="6dp"
					android:background="@drawable/upload_index_describe_edit"
					/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="\@"
					android:textSize="20sp"
					android:layout_gravity="bottom"
					android:layout_marginBottom="4dp"
					android:layout_marginLeft="10dp"
					android:id="@+id/notice_someone_img"
					/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/topic_of_user_picture_img"
					android:text="\#"
					android:textSize="20sp"
					android:layout_gravity="bottom"
					android:layout_marginBottom="2dp"
					android:layout_marginLeft="45dp"
					/>
		</FrameLayout>

		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginLeft="6dp"
				android:layout_marginRight="6dp"
				android:orientation="vertical"
				android:background="@drawable/before_share_classes_border"
				>

			<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					>

				<TextView
						style="@style/share_index_classes_style"
						android:text="Location"
						/>

				<TextView
						style="@style/share_index_places_style"
						android:text="成都信息工程学院"
						/>

				<Switch
						android:layout_width="90dp"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_marginRight="2dp"
						android:textOff="OFF"
						android:textOn="ON"
						/>
			</RelativeLayout>

			<View
					android:layout_width="fill_parent"
					android:layout_height="1dp"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:background="@color/dark"
					/>

			<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					>

				<TextView
						style="@style/share_index_classes_style"
						android:text="Class"
						/>

				<TextView
						style="@style/share_index_places_style"
						android:text="生活"
						/>

				<Switch
						android:layout_width="90dp"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:layout_marginRight="2dp"
						android:textOff="OFF"
						android:textOn="ON"
						/>
			</RelativeLayout>

			<View
					android:layout_width="fill_parent"
					android:layout_height="1dp"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:background="@color/dark"
					/>

			<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					>

				<TextView
						style="@style/share_index_classes_style"
						android:text="Albunm"
						/>

				<TextView
						style="@style/share_index_places_style"
						android:text="西岭雪山三日游"
						/>

				<Switch
						android:layout_width="90dp"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:layout_marginRight="2dp"
						android:textOff="OFF"
						android:textOn="ON"
						/>
			</RelativeLayout>

			<View
					android:layout_width="fill_parent"
					android:layout_height="1dp"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:background="@color/dark"
					/>

			<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:paddingTop="10dp"
					android:paddingBottom="10dp"
					>

				<TextView
						style="@style/share_index_classes_style"
						android:text="Private"
						/>

				<TextView
						style="@style/share_index_places_style"
						android:text=""
						/>

				<Switch
						android:layout_width="90dp"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:layout_marginRight="2dp"
						android:textOff="OFF"
						android:textOn="ON"
						/>
			</RelativeLayout>

		</LinearLayout>

	</LinearLayout>
</LinearLayout>