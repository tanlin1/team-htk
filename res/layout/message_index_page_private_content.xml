<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
		>

	<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
	        android:background="@color/white"
			>
			<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
					android:layout_marginLeft="16dp"
			        android:id="@+id/liner"
					>
				<view
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:id="@+id/message_index_user_photo_head_of_private_comment"
						android:src="@drawable/head2"
						android:layout_gravity="center_horizontal|center_vertical"
						class="utils.view.view.CircleImageView"

						/>
			</LinearLayout>

			<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_alignParentRight="true"
					android:layout_marginRight="50sp"
					android:layout_toRightOf="@id/liner"
					>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="康乐"
						/>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/message_index_private_comment_content"
						android:text="你好，关于你的这边博客，我对这几个地方有疑惑，你方便帮我解答一下吗？"
						/>
			</LinearLayout>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/message_index_time_of_private_comment"

					android:layout_alignParentRight="true"
					android:layout_alignParentTop="true"
					android:layout_marginRight="16dp"
					android:text="3:23"
					/>
		</RelativeLayout>

</LinearLayout>