<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.htk.moment.ui"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
		>

	<RelativeLayout android:layout_width="fill_parent"
	                android:layout_height="200dp">
		<utils.view.circle.CircleImageView android:layout_width="150dp"
		                                   android:layout_height="150dp"
		                                   android:id="@+id/photo_head"
		                                   android:layout_alignParentLeft="true"
		                                   android:layout_marginLeft="66dp"
		                                   android:layout_marginTop="6dp"
		                                   android:src="@drawable/header_graphic"
		                                   app:border_width="2dp"
		                                   app:border_color="@android:color/holo_green_light"
				/>
		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:id="@+id/user_name"
		          android:textSize="20sp"
		          android:textStyle="italic"
		          android:layout_toRightOf="@id/photo_head"
		          android:layout_alignLeft="@id/photo_head"
		          android:layout_alignBottom="@id/photo_head"
		          android:layout_marginLeft="20dp"
				/>

	</RelativeLayout>

</LinearLayout>