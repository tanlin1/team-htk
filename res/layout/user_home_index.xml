<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
		>
	<TextView android:layout_width="fill_parent"
	          android:layout_height="48dp"
	          android:gravity="center"
	          android:id="@+id/momentHome"
	          android:text="@string/app_name"
	          android:textSize="28sp"
			/>
	<RelativeLayout android:layout_width="fill_parent"
	                android:layout_height="75dp"
	                android:id="@+id/relative1"
	                android:layout_below="@id/momentHome"
	                android:layout_marginTop="1dp"
			>
		<ImageView android:layout_width="80dp"
		           android:layout_height="60dp"
		           android:scaleType="fitXY"
		           android:layout_marginTop="8dp"
		           android:id="@+id/headPhotoHome"
		           android:layout_marginLeft="10dp" />
		<TextView android:layout_width="68sp"
		          android:layout_height="29sp"
		          android:text="@string/app_name"
		          android:layout_alignTop="@id/headPhotoHome"
		          android:layout_toRightOf="@id/headPhotoHome"
		          android:layout_marginLeft="8dp"
		          android:id="@+id/userNameHome"
		          android:gravity="center"
		          android:textSize="20sp"
				/>
		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:layout_alignParentTop="true"
		          android:layout_alignParentRight="true"
		          android:layout_marginRight="48dp"
		          android:text="+"
		          android:id="@+id/homeAdd"
		          android:textSize="35sp"
		          android:textStyle="bold"
		          android:gravity="center_horizontal"
				/>
		<TextView android:layout_width="fill_parent"
		          android:layout_height="fill_parent"
		          android:layout_below="@id/userNameHome"
		          android:layout_alignLeft="@id/userNameHome"
		          android:layout_alignParentRight="true"
		          android:layout_marginRight="25dp"
		          android:layout_alignBottom="@id/headPhotoHome"
		          android:singleLine="true"
		          android:gravity="center|bottom"
		          android:id="@+id/fashionName"
		          android:text="让我来想一想一串长长长长长长长长的签名"
		          android:textSize="16sp"
				/>
	</RelativeLayout>
	<LinearLayout android:layout_width="fill_parent"
	              android:layout_height="48dp"
	              android:gravity="center"
	              android:id="@+id/HomeFLFF"
	              android:layout_below="@id/relative1"
			>
		<TextView android:layout_width="0dp"
		          android:layout_height="wrap_content"
		          android:gravity="center"
		          android:text="照片"
		          android:textSize="21sp"
		          android:id="@+id/photo"
		          android:layout_weight="1"
				/>
		<TextView android:layout_width="0dp"
		          android:layout_height="wrap_content"
		          android:gravity="center"
		          android:text="喜欢"
		          android:textSize="21sp"
		          android:id="@+id/iLike"
		          android:layout_weight="1"
				/>
		<TextView android:layout_width="0dp"
		          android:layout_height="wrap_content"
		          android:gravity="center"
		          android:text="粉丝"
		          android:textSize="21sp"
		          android:id="@+id/fans"
		          android:layout_weight="1"
				/>
		<TextView android:layout_width="0dp"
		          android:layout_height="wrap_content"
		          android:gravity="center"
		          android:text="关注"
		          android:textSize="21sp"
		          android:id="@+id/focus"
		          android:layout_weight="1"
				/>
	</LinearLayout>

	<RelativeLayout android:layout_width="fill_parent"
	                android:layout_height="22dp"
	                android:gravity="center"
	                android:id="@+id/relative2"
	                android:layout_below="@id/HomeFLFF"
			>
		<TextView android:layout_width="60sp"
		          android:layout_height="wrap_content"
		          android:layout_alignParentLeft="true"
		          android:layout_marginLeft="12dp"
		          android:text="123张照片"
		          android:gravity="center|center_vertical"
		          android:textSize="16sp"
		          android:singleLine="true"
				/>
		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="看图"
		          android:textSize="16sp"
		          android:layout_alignParentRight="true"
		          android:layout_marginRight="16dp"
		          android:id="@+id/graphicOnly"
				/>
		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="图文"
		          android:textSize="16sp"
		          android:layout_toLeftOf="@id/graphicOnly"
		          android:layout_marginRight="16dp"
		          android:id="@+id/graphicAndWords"
				/>
		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="足迹"
		          android:textSize="16sp"
		          android:layout_toLeftOf="@id/graphicAndWords"
		          android:layout_marginRight="16dp"
		          android:id="@+id/footPrint"
				/>
	</RelativeLayout>



	<ListView android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:id="@+id/homeListView"
	          android:layout_below="@id/relative2"
			>

	</ListView>
</RelativeLayout>